pipeline {
    agent {
        docker {
            image 'docker-agent-alpine'
            label 'docker' 
            reuseNode true
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Test simple') {
            steps {
                script {
                    sh '''
                        echo "Structure du projet:"
                        ls -al
                    '''
                    
                    if (fileExists('test.sh')) {
                        sh 'chmod +x test.sh && ./test.sh'
                    } else {
                        echo "Aucun script test.sh trouvé"
                    }
                    

                    if (!fileExists('README.md')) {
                        error "Fichier README.md manquant - test échoué"
                    } else {
                        echo "Fichier README.md présent - test réussi"
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo "Nettoyage terminé - build #${env.BUILD_NUMBER}"
        }
        success {
            echo "✅ Tous les tests ont réussi!"
        }
        failure {
            echo "❌ Certains tests ont échoué"
        }
    }
}